<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".Controller.MainActivity">

    <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:sparkbutton_activeImage="@drawable/ic_send_white_24dp"
            app:sparkbutton_inActiveImage="@drawable/ic_send_transp_24dp"
            app:sparkbutton_iconSize="40dp"
            app:sparkbutton_primaryColor="@color/colorPrimaryAnim"
            app:sparkbutton_secondaryColor="@color/colorSecondaryAnim"
            app:layout_constraintStart_toEndOf="@+id/imageMusicianLeft"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageMusicianRight"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spark_button"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageMusicianLeft"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageMusicianRight"
            app:srcCompat="@drawable/ic_person_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMusicianLeft"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageMusicianLeft"
            tools:text="Musician One"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/imageMusicianLeft"
            app:layout_constraintEnd_toEndOf="@+id/imageMusicianLeft"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMusicianRight" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageMusicianRight"
            tools:text="Musician Two" android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/imageMusicianRight"
            app:layout_constraintStart_toStartOf="@+id/imageMusicianRight"/>
    <TextView
            android:layout_width="78dp"
            android:layout_height="75dp"
            android:id="@+id/textInstructions" android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/spark_button"
            app:layout_constraintTop_toTopOf="@+id/spark_button"
            app:layout_constraintStart_toEndOf="@+id/imageMusicianLeft" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageMusicianRight" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:text="Pick Two" app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>